@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <a class="text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>&nbsp;&nbsp;&nbsp;|
                <button type="submit" class="btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>&nbsp;&nbsp;|&nbsp;
            <a class="text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>&nbsp;&nbsp;&nbsp;
        </li>
    }
</ul>
