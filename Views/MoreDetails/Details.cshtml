<!--This page allows user to view the details of a specific MoreDetails object-->
@model NETD3202_Lab5_V3.Models.MoreDetail
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Details";
}
@if (SignInManager.IsSignedIn(User))
{
    <div>
        <h4>Game ID: @Html.DisplayFor(model => model.gID) - Details</h4>
        <hr />
        <dl>
            <dt>
                Description
            </dt>
            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>
        </dl>
        <hr />
    </div>
    <div>
        <a style="color: black" asp-action="Edit" asp-route-id="@Model.gID">Edit</a>&nbsp;&nbsp;
        <a style="color: black" asp-controller="VideoGames" asp-action="Details" asp-route-id="@Model.gID">Other Details</a>&nbsp;&nbsp;
        <a style="color: black" asp-action="Index">More Details List</a>
    </div>
}
else
{
    <div>
        <h4>Game ID: @Html.DisplayFor(model => model.gID) - Details</h4>
        <hr />
        <dl>
            <dt>
                Description
            </dt>
            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>
        </dl>
        <hr />
    </div>
    <div>
        <a style="color: black" asp-controller="VideoGames" asp-action="Details" asp-route-id="@Model.gID">Other Details</a>&nbsp;&nbsp;
        <a style="color: black" asp-action="Index">More Details List</a>
    </div>
}
