<!--This page allows user to delete a VideoGame object-->
@model NETD3202_Lab5_V3.Models.VideoGame
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Delete";
}
@if (SignInManager.IsSignedIn(User))
{
    <h1>Delete</h1>
    <hr />
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt>
                Game Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.gameName)
            </dd>
            <dt>
                Release Year
            </dt>
            <dd>
                @Html.DisplayFor(model => model.releaseYear)
            </dd>
            <dt>
                ESRB
            </dt>
            <dd>
                @Html.DisplayFor(model => model.esrb)
            </dd>
            <dt>
                Rating
            </dt>
            <dd>
                @Html.DisplayFor(model => model.rating)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="gameID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a style="color: black" asp-action="Index">Back to List</a>
        </form>
    </div>
}
else
{
    <h1 class="display-4">Oops!</h1>
    <hr />
    <p class="lead">
        You don't have access to this page. Are you logged in?
    </p>

    <p class="lead">
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-secondary">Login</a>
    </p>
}